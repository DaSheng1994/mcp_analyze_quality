{
  "alert_thresholds": {
    "memory_leak": {
      "growth_rate_critical": 100,
      "growth_rate_warning": 50,
      "continuous_growth_periods": 5,
      "peak_to_avg_ratio": 1.5,
      "recent_growth_critical": 30,
      "description": "内存泄漏检测阈值"
    },
    "thread_management": {
      "max_threads_critical": 400,
      "max_threads_warning": 350,
      "thread_variance_critical": 100,
      "thread_variance_warning": 50,
      "description": "线程管理阈值"
    },
    "heap_usage": {
      "heap_growth_critical": 200,
      "heap_growth_warning": 100,
      "heap_utilization_critical": 0.9,
      "description": "堆内存使用阈值"
    },
    "system_resources": {
      "fd_critical": 800,
      "fd_warning": 600,
      "views_growth_critical": 200,
      "views_growth_warning": 100,
      "description": "系统资源阈值"
    },
    "webview_management": {
      "webview_count_warning": 5,
      "webview_count_critical": 10,
      "description": "WebView管理阈值"
    }
  },
  "alert_settings": {
    "enable_priority_alerts": true,
    "enable_warning_alerts": true,
    "enable_info_alerts": true,
    "memory_leak_detection": true,
    "continuous_monitoring": true,
    "recent_trend_analysis": true,
    "description": "告警功能开关"
  },
  "monitoring_config": {
    "sample_interval_minutes": 5,
    "recent_data_percentage": 0.2,
    "min_data_points_for_analysis": 10,
    "description": "监控配置参数"
  },
  "notification_levels": {
    "critical": {
      "emoji": "🚨",
      "color": "red",
      "priority": 1,
      "description": "严重问题，需要立即处理"
    },
    "warning": {
      "emoji": "⚠️",
      "color": "orange", 
      "priority": 2,
      "description": "警告问题，建议关注"
    },
    "info": {
      "emoji": "ℹ️",
      "color": "blue",
      "priority": 3,
      "description": "信息提醒，一般关注"
    }
  },
  "custom_rules": {
    "memory_leak_patterns": [
      {
        "name": "持续增长检测",
        "condition": "growth_rate > 100 AND continuous_growth >= 5",
        "level": "critical",
        "message": "检测到严重内存泄漏：内存持续大幅增长"
      },
      {
        "name": "快速增长检测", 
        "condition": "recent_growth > 30 AND continuous_growth >= 3",
        "level": "warning",
        "message": "检测到快速内存增长趋势"
      }
    ],
    "performance_patterns": [
      {
        "name": "线程爆炸检测",
        "condition": "max_threads > 400 OR thread_variance > 100",
        "level": "critical",
        "message": "线程管理异常，可能影响系统稳定性"
      }
    ]
  },
  "version": "1.0",
  "last_updated": "2024-01-01",
  "description": "性能监控告警配置文件 - 可根据实际需求调整阈值"
} 